<Application x:Class="OpenVoiceModder.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OpenVoiceModder"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/RoundButton.xaml"/>
                <ResourceDictionary Source="Resources/Styles/RoundToggleButton.xaml"/>
                <ResourceDictionary Source="Resources/Styles/RoundTrackBar.xaml"/>
                <ResourceDictionary Source="Resources/Styles/RoundScrollViewer.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <FontFamily x:Key="FontAwesome">/Resources/fa-solid-900.ttf#Font Awesome 6 Free Solid</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
