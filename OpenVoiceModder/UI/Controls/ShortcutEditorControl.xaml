<UserControl x:Class="OpenVoiceModder.UI.Controls.ShortcutEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenVoiceModder.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <local:IconTextBox x:Name="PART_ShortcutBox" Text="None"
                           Width="100"/>
        <Button x:Name="PART_EditButton" Content="Edit" Grid.Column="1" Margin="5 0 0 0"
                Style="{DynamicResource RoundButton}"/>
    </Grid>
</UserControl>
